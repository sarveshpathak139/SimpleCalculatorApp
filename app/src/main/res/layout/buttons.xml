<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        >

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="0"

            />

        <Button
            android:id="@+id/bracket"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="()"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="1"

            />

        <Button
            android:id="@+id/modulo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="2"

            />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="รท"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="3"

            />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="0"

            />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="1"

            />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="2"

            />

        <Button
            android:id="@+id/add1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="3"

            />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="0"

            />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="1"

            />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="2"

            />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="ร"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="2"
            android:layout_column="3"

            />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="0"

            />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="1"

            />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="2"

            />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="3"
            android:layout_column="3"

            />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="4"
            android:layout_column="0"

            />

        <Button
            android:id="@+id/dot1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="4"
            android:layout_column="1"

            />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:layout_columnWeight="1"
            android:textSize="25sp"
            android:layout_row="4"
            android:layout_column="3"

            />




    </GridLayout>

</RelativeLayout>